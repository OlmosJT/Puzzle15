<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_home">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_with_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/clear_sans_bold</item>
    </style>

    <style name="btn_clear_cache">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_clear_cache</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/clear_sans_bold</item>
    </style>

    <style name="cells_button">
        <item name="fontFamily">@font/clear_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/bg_cell</item>
    </style>

    <style name="switchBtn">
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="android:layout_margin">16dp</item>
        <item name="fontFamily">@font/clear_sans_medium</item>
        <item name="android:textColor">@color/darkBrown</item>
    </style>
</resources>