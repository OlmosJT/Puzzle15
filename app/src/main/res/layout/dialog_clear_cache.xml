<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning!!!"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/clear_sans_medium"
        android:textColor="#B63232"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you agree to delete all records and even your best records?"
        android:textSize="16sp"
        android:justificationMode="inter_word"
        android:fontFamily="@font/clear_sans_medium"
        android:textColor="@color/darkBrown"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:text="Cancel"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/clear_sans_bold"
            android:textSize="16sp"
            android:background="@drawable/button_with_radius"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOK"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:text="Agree"
            android:textColor="@color/white"
            android:fontFamily="@font/clear_sans_bold"
            android:textSize="16sp"
            android:background="@drawable/button_with_radius"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>